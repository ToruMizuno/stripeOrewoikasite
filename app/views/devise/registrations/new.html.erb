<div class="text-center">

  <h2>アカウント新規作成</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <%# フォームを真ん中にするbootstrapを適用 %>
    <div class="form-group mx-auto" style="width: 400px;">
      <%= f.label :email, class: "sr-only" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address" %>
    </div>

    <%# フォームを真ん中にするbootstrapを適用 %>
    <div class="form-group mx-auto" style="width: 400px;">
      <%= f.label :password, class: "sr-only" %>
      <% if @minimum_password_length %>
      <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
      <% end %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
    </div>

    <%# フォームを真ん中にするbootstrapを適用 %>
    <div class="form-group mx-auto" style="width: 400px;">
      <%= f.label :password_confirmation, class: "sr-only" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password_confirmation" %>
    </div>

    <%# フォームを真ん中にするbootstrapを適用 %>
    <div class="actions mx-auto" style="width: 400px;">
      <%= f.submit "アカウント新規作成", class: "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>

  <%# _links.html.erbを表示 %>
  <%= render "devise/shared/links" %>

</div>

