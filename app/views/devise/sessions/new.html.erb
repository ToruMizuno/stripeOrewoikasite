
<div class="text-center">

  <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, html: {class: 'form-signin'}, url: session_path(resource_name)) do |f| %>
    
    <%# フォームを真ん中にするbootstrapを適用 %>
    <div class="form-group mx-auto" style="width: 400px;">
      <%= f.label :email, class: "sr-only" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "inputEmail", class: "form-control", placeholder: "Email address" %>
    </div>

    <%# フォームを真ん中にするbootstrapを適用 %>
    <div class="form-group mx-auto" style="width: 400px;">
      <%= f.label :password, class: "sr-only" %>
      <%= f.password_field :password, autocomplete: "off", id: "inputPassword", class: "form-control", placeholder: "Password" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group form-check">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <%# フォームを真ん中にするbootstrapを適用 %>
    <div class="actions mx-auto" style="width: 400px;">
      <%= f.submit "ログイン", class: "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>

  <%# _links.html.erbを表示 %>
  <%= render "devise/shared/links" %>

</div>


